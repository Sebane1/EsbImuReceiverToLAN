<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EsbReceiverToLanAndroid.MainPage">
    <VerticalStackLayout Padding="20">
        <Label x:Name="titleLabel"
               Text="ESB IMU Receiver to LAN"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry x:Name="ipEntry"
               Placeholder="Enter destination IP" />

        <Label x:Name="rateLabel"
       Text="Packet interval: 16 ms (~60 Hz)"
       Margin="0,10,0,0" />

        <Slider x:Name="rateSlider"
        Minimum="0"
        Maximum="64"
        Value="16"
        ValueChanged="RateSlider_ValueChanged" />

        <Button x:Name="startButton"
                Text="Start Receiver"
                Clicked="StartButton_Clicked" />
        <Label x:Name="statusLabel"
               TextColor="Red" />

        <Button x:Name="refreshButton"
                Text="Refresh Trackers"
                Clicked="RefreshButton_Clicked" />

    </VerticalStackLayout>
</ContentPage>